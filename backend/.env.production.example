# Production Environment Configuration

# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=techfolks
DB_PASSWORD=your_secure_db_password_here
DB_NAME=techfolks_prod

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Judge0 Configuration
JUDGE0_API_URL=http://judge0:2358
JUDGE0_AUTH_TOKEN=your_judge0_auth_token_here
JUDGE0_DB_PASSWORD=your_judge0_db_password_here

# Email Configuration
EMAIL_FROM="TechFolks <noreply@techfolks.com>"
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://techfolks.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here_min_32_chars

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100

# Grafana Configuration (for docker-compose)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30